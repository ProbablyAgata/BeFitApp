@model BeFit.Models.TrainingSession

@{
    ViewData["Title"] = "Training Session Details";
}

<h1>Szczegóły sesji treningowej</h1>

<div>
    <h4>Sesja</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Start</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>

        <dt class="col-sm-2">Koniec</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Usuń</a>
</div>
