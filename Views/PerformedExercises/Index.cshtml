@model IEnumerable<BeFit.Models.PerformedExercise>

@{
    ViewData["Title"] = "Przeprowadzone ćwiczenia";
}

<style>
    .gradient-button {
        background: linear-gradient(90deg, #28a745 0%, #85e085 100%);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

    .gradient-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);
        color: white;
    }

    .gradient-button-secondary {
        background: linear-gradient(90deg, #6c757d 0%, #868e96 100%);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

    .gradient-button-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.2);
        color: white;
    }

    .gradient-button-sm {
        background: linear-gradient(90deg, #28a745 0%, #85e085 100%);
        color: white;
        border: none;
        padding: 0.3rem 0.6rem;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

    .gradient-button-sm:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);
        color: white;
    }

    .btn-group .btn {
        background: linear-gradient(90deg, #28a745 0%, #85e085 100%);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        transition: all 0.3s ease;
        margin-right: 0.5rem;
    }

    .btn-group .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);
        color: white;
    }

    .btn-group .btn:last-child {
        margin-right: 0;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-activity"></i> Przeprowadzone ćwiczenia
        </h1>
        <a asp-action="Create" class="btn gradient-button">
        <i class="bi bi-plus-circle"></i> Dodaj nową sesję
    </a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-emoji-smile display-4 text-muted mb-3"></i>
                    <p class="text-muted mb-0">Nie masz jeszcze żadnych ćwiczeń. Zacznij dodawać swoje pierwsze ćwiczenia!</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Data treningu</th>
                                <th>Typ ćwiczenia</th>
                                <th>Obciążenie (kg)</th>
                                <th>Serie</th>
                                <th>Powtórzenia</th>
                                <th class="text-end">Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TrainingSession.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@item.ExerciseType.Name</td>
                                    <td>@item.Weight</td>
                                    <td>@item.Series</td>
                                    <td>@item.Repetitions</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn" title="Szczegóły">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn" title="Edytuj">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn" title="Usuń">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
